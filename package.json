{
  "name": "saisync-clone",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "start": "turbo run start",
    "db:push": "turbo run db:push",
    "db:generate": "turbo run db:generate",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.8.11",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}